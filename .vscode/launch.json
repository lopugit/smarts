	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Serialisation Tests",
			"program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
			"args": [
				"-u",
				"bdd",
				"--timeout",
				"999999",
				"--colors",
				"${workspaceFolder}/test/tests/serialisation.js"
			],
			"internalConsoleOptions": "openOnSessionStart",
			"skipFiles": [
				// "<node_internals>/**"
			]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Transform Tests",
			"program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
			"args": [
				"-u",
				"bdd",
				"--timeout",
				"999999",
				"--colors",
				"${workspaceFolder}/test/tests/functions/transform.js"
			],
			"internalConsoleOptions": "openOnSessionStart",
			"skipFiles": [
				// "<node_internals>/**"
			]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Schema Tests",
			"program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
			"args": [
				"-u",
				"bdd",
				"--timeout",
				"999999",
				"--colors",
				"${workspaceFolder}/test/tests/functions/schema.js"
			],
			"internalConsoleOptions": "openOnSessionStart",
			"skipFiles": [
				// "<node_internals>/**"
			]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "All Tests",
			"program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
			"args": [
				"-u",
				"bdd",
				"--timeout",
				"999999",
				"--colors",
				"--recursive",
				"${workspaceFolder}/test/tests/"
			],
			"internalConsoleOptions": "openOnSessionStart",
			"skipFiles": [
				// "<node_internals>/**"
			]
		},
	]
}